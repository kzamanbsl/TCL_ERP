@model IEnumerable<KGERP.Service.ServiceModel.LeaveCategoryModel>

@{
    ViewBag.Title = "Index";
}

    <div class="row">
            <span style="font-size:30px">Leave Setup</span>
            <a href="@Url.Action("CreateOrEdit", new { id = 0 })" title="New Category" class="btn btn-primary pull-right">
                <span class="glyphicon glyphicon-user"></span> Add
            </a>
    </div>
    <div class="row">
        <hr style="border-color:#ff0000; padding:0px;margin-top: 5px;margin-bottom: 5px; border-width: 2px;" />
        <table class="table table-striped table-responsive">
            <tr style="background-color:#4CAF50;color:#FFFFFF">
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Type)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.MaxDays)
                </th>
                <th>Action</th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.MaxDays)
                    </td>
                    <td>

                        <a href="@Url.Action("CreateOrEdit", new { id = item.LeaveCategoryId})" title="Edit" class="btn btn-info btn-xs">
                            <i class="fa fa-edit" aria-hidden="true"></i>
                        </a>
                        <a href="@Url.Action("Delete", new { id = item.LeaveCategoryId})" title="Delete" class="btn btn-danger btn-xs">
                            <i class="fa fa-trash" aria-hidden="true"></i>
                        </a>
                    </td>
                </tr>
            }

        </table>
    </div>


