@model KG.Core.Services.Configuration.VmUserActionLog
@using KG.Core.Services

@{
    ViewData["Title"] = "User Activity Log";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">

    input, select, textarea {
        max-width: 100%;
    }
</style>

<section class="content-header">
    <h1>
        User Activity Log
    </h1>
    <ol class="breadcrumb">
        <li><a href="~/Home/Index"><i class="fa fa-dashboard"></i>Dashboard</a></li>
        <li class="active">User Activity Log</li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            @using (Html.BeginForm("CommonRawProduct", "Configuration", FormMethod.Post, new { id = "commonProductFormId", @class = "formValidator", @enctype = "multipart/form-data" }))
            {
                <div class="box">
                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="box-danger">

                        <!-- /.box-header -->
                        <div class="box-body">
                            <div class="row">
                                <div class="col-md-1"></div>
                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="message-text" class="col-form-label">Start Date :</label>
                                        @Html.TextBoxFor(model => model.FromDate, new { id = "txtFromDate", @class = "form-control", @placeholder = "Start date", required = "required" })
                                        @Html.ValidationMessageFor(model => model.FromDate, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label for="message-text" class="col-form-label">End Date :</label>
                                        @Html.TextBoxFor(model => model.ToDate, new { id = "txtEndDate", @class = "form-control", @placeholder = "End date", required = "required" })
                                        @Html.ValidationMessageFor(model => model.ToDate, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group" style="margin-top: 25px !important">
                                        <button type="submit" id="btnSave" class="btn btn-primary btn-block"><i class='fa fa-search'></i> Search</button>
                                    </div>
                                </div>
                                <div class="col-md-1"></div>
                            </div>
                        </div>
                        <div class="box-footer">
                        </div>
                        <div class="box">
                            <div class="box-danger">
                                <div class="box-header">
                                </div>
                                <!-- /.box-header -->
                                <div class="box-body">
                                    <div class="table-responsive text-nowrap">
                                        <table id="KgErpDataTable" class="table table-responsive table-striped w-100 text-center">
                                            <thead>
                                                <tr>
                                                    <th>SL No</th>
                                                    <th>Employee Id</th>
                                                    <th>Employee Name</th>
                                                    <th>Action Name</th>
                                                    <th>Action Timestamp</th>
                                                    <th>Action Details</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{
                                                    if (Model.DataList != null)
                                                    {
                                                        int sl = 0;
                                                        foreach (var item in Model.DataList.OrderByDescending(c => c.UserLogId))
                                                        {
                                                            <tr>
                                                                <td>@(++sl)</td>
                                                                <td>@item.EmpUserId</td>
                                                                <td>@item.EmployeeName</td>
                                                                <td>
                                                                    @if (item.ActionType == (int)KGERP.Utility.ActionEnum.Add)
                                                                    {
                                                                        <span class="btn btn-primary btn-xs">Added</span>
                                                                    }
                                                                    else if (item.ActionType == (int)KGERP.Utility.ActionEnum.Edit)
                                                                    {
                                                                        <span class="btn btn-warning btn-xs">Updated</span>
                                                                    }
                                                                    else if (item.ActionType == (int)KGERP.Utility.ActionEnum.Delete)
                                                                    {
                                                                        <span class="btn btn-danger btn-xs">Deleted</span>
                                                                    }
                                                                    else
                                                                    {
                                                                        <span class="btn btn-secondary btn-xs">No-Action</span>
                                                                    }
                                                                </td>
                                                                <td>@item.ActionTimeStamp.ToLongTimeString()</td>
                                                                <td>@item.Details</td>
                                                            </tr>
                                                        }
                                                    }
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                                <div class="box-footer">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }

        </div>
    </div>
</section>

