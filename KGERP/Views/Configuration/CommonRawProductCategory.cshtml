@model KGERP.Service.Implementation.Configuration.VMCommonProductCategory
@using KG.Core.Services
@{
    ViewData["Title"] = "Add Material Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style type="text/css">
    input, select, textarea {
        max-width: 100%;
    }

    .text-on-pannel {
        background: #fff none repeat scroll 0 0;
        height: auto;
        position: absolute;
        padding: 0 !important;
        margin: 20px;
        margin-top: -39px;
    }

    .panel {
        margin-top: 27px !important;
        border-color: #d2d6de !important;
        border-radius: 0px !important;
        padding: 0 !important;
    }

    .panel-body {
        padding: 0;
        padding-top: 30px !important;
    }
</style>
<section class="content-header">
    <h1>
        Material Categories
    </h1>
    <ol class="breadcrumb">
        <li><a href="~/Home/Index"><i class="fa fa-dashboard"></i>Dashboard</a></li>
        <li class="active">Add Material Category</li>
    </ol>
</section>
@using (Html.BeginForm("CommonRawProductCategory", "Configuration", FormMethod.Post, new { id = "commonFinishProductCategoryFormId", @class = "formValidator", onreset = "resetDDL();" }))
{
    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="col-md-12">
                    <div class="box">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        <div class="box-danger">
                            <div class="box-header"></div>
                            <!-- /.box-header -->
                            <div class="box-body">
                                @Html.HiddenFor(model => model.ID, new { id = "productCategoryId" })
                                @Html.HiddenFor(model => model.ActionId, new { id = "ActionId" })
                                @Html.HiddenFor(model => model.CompanyFK, new { id = "CompanyFK" })

                                <div class="row">
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label>Material Category<sup class="text-danger" title="Required"><b>*</b></sup></label>
                                            @Html.TextBoxFor(model => model.Name, new { id = "txtProductCategoryName", @class = "form-control input-sm", @placeholder = "Type material category name", required = "true", })
                                            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                    <div class="col-md-6">
                                        <div class="form-group">
                                            <label></label>
                                            <div class="form-check" style="margin: 10px 0;">
                                                @Html.CheckBoxFor(model => model.IsBudget, new { @class = "form-check-input", id = "isBudget" })
                                                <label class="form-check-label" for="isBudget">Check this box if the item is within the <span class="text-danger">Budget</span>.</label>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12" style="margin-top: -10px">
                                        <div class="panel panel-primary">
                                            <div class="panel-body">
                                                <h5 class="text-on-pannel">Accounting Head</h5>
                                                <div class="row" style="margin: 15px 0; margin-top: -8px">
                                                    <div class="col-md-3">
                                                        <div class="form-check">
                                                            @Html.CheckBoxFor(model => model.Asset, new { @class = "form-check-input", id = "asset" })
                                                            <label class="form-check-label" for="asset">Assets</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <div class="form-check">
                                                            @Html.CheckBoxFor(model => model.Equity, new { @class = "form-check-input", id = "equity" })
                                                            <label class="form-check-label" for="equity">Equity & Liabilities</label>
                                                        </div>
                                                    </div>
                                                    <div class="col-md-3">
                                                        <div class="form-check">
                                                            @Html.CheckBoxFor(model => model.Income, new { @class = "form-check-input", id = "income" })
                                                            <label class="form-check-label" for="income">Income</label>
                                                        </div>
                                                    </div>

                                                    <div class="col-md-3">
                                                        <div class="form-check">
                                                            @Html.CheckBoxFor(model => model.Expense, new { @class = "form-check-input", id = "expense" })
                                                            <label class="form-check-label" for="expense">Expense</label>
                                                        </div>
                                                    </div>
                                                </div>

                                                <div class="row" style="margin: 15px 0;">
                                                    <div class="col-md-3 hidden" id="accAsset">
                                                        <div class="form-group">
                                                            <label>Asset 2nd Layer<sup class="text-danger" title="Required"><b>*</b></sup></label>
                                                            @Html.DropDownListFor(model => model.Head2AssetId, Model.Head2AssetList, "==Select Head==", new { id = "ddlHead2AssetId", @class = "form-control searchingDropdown", required = "true", @style = "width: 100%" })
                                                            @Html.ValidationMessageFor(model => model.Head2AssetId, "", new { @class = "text-danger" })
                                                        </div>

                                                        <div class="form-group hidden">
                                                            <label>Asset 3rd Layer<sup class="text-danger" title="Required"><b>*</b></sup></label>
                                                            @Html.DropDownListFor(model => model.Head3AssetId, Model.Head3AssetList, "==Select Head==", new { id = "ddlHead3AssetId", @class = "form-control searchingDropdown", required = "true", @style = "width: 100%" })
                                                            @Html.ValidationMessageFor(model => model.Head2AssetId, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="col-md-3 hidden" id="accEquity">
                                                        <div class="form-group">
                                                            <label>Equity 2nd Layer<sup class="text-danger" title="Required"><b>*</b></sup></label>
                                                            @Html.DropDownListFor(model => model.Head2EquityId, Model.Head2EquityList, "==Select Head==", new { id = "ddlHead2EquityId", @class = "form-control searchingDropdown", required = "true", @style = "width: 100%" })
                                                            @Html.ValidationMessageFor(model => model.Head2EquityId, "", new { @class = "text-danger" })
                                                        </div>

                                                        <div class="form-group hidden">
                                                            <label>Equity 3rd Layer<sup class="text-danger" title="Required"><b>*</b></sup></label>
                                                            @Html.DropDownListFor(model => model.Head3EquityId, Model.Head3EquityList, "==Select Head==", new { id = "ddlHead3EquityId", @class = "form-control searchingDropdown", required = "true", @style = "width: 100%" })
                                                            @Html.ValidationMessageFor(model => model.Head3EquityId, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="col-md-3 hidden" id="accIncome">
                                                        <div class="form-group">
                                                            <label>Income 2nd Layer<sup class="text-danger" title="Required"><b>*</b></sup></label>
                                                            @Html.DropDownListFor(model => model.Head2IncomeId, Model.Head2IncomeList, "==Select Head==", new { id = "ddlHead2IncomeId", @class = "form-control searchingDropdown", required = "true", @style = "width: 100%" })
                                                            @Html.ValidationMessageFor(model => model.Head2IncomeId, "", new { @class = "text-danger" })
                                                        </div>

                                                        <div class="form-group hidden">
                                                            <label>Income 3rd Layer<sup class="text-danger" title="Required"><b>*</b></sup></label>
                                                            @Html.DropDownListFor(model => model.Head3IncomeId, Model.Head3IncomeList, "==Select Head==", new { id = "ddlHead3IncomeId", @class = "form-control searchingDropdown", required = "true", @style = "width: 100%" })
                                                            @Html.ValidationMessageFor(model => model.Head3IncomeId, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="col-md-3 hidden" id="accExpense">
                                                        <div class="form-group">
                                                            <label>Expense 2nd Layer<sup class="text-danger" title="Required"><b>*</b></sup></label>
                                                            @Html.DropDownListFor(model => model.Head2ExpenseId, Model.Head2ExpenseList, "==Select Head==", new { id = "ddlHead2ExpenseId", @class = "form-control searchingDropdown", required = "true", @style = "width: 100%" })
                                                            @Html.ValidationMessageFor(model => model.Head2ExpenseId, "", new { @class = "text-danger" })
                                                        </div>

                                                        <div class="form-group hidden">
                                                            <label>Expense 3rd Layer<sup class="text-danger" title="Required"><b>*</b></sup></label>
                                                            @Html.DropDownListFor(model => model.Head3ExpenseId, Model.Head3ExpenseList, "==Select Head==", new { id = "ddlHead3ExpenseId", @class = "form-control searchingDropdown", required = "true", @style = "width: 100%" })
                                                            @Html.ValidationMessageFor(model => model.Head3ExpenseId, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-md-12">
                                        <div class="form-group">
                                            <div class="col-md-6">
                                                <button type="button" onclick="resetForm()" class="btn btn-secondary btn-block w-100" data-dismiss="modal">Reset</button>
                                            </div>
                                            <div class="col-md-6">
                                                <button type="submit" id="btnSave" class="btn btn-primary btn-block w-100"><i class='fa fa-edit'></i> Add</button>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-12">
                    <div class="box">
                        <div class="box-danger">
                            <div class="box-header"></div>
                            <!-- /.box-header -->
                            <div class="box-body">
                                <div class="table-responsive col-md-12">
                                    <table id="KgErpDataTable" class="table table-dark table-responsive table-striped">
                                        <thead>
                                            <tr>
                                                <th>SL</th>
                                                <th>Material Category</th>
                                                <th>Budget</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        @{int sl = 0;
                                        }
                                        <tbody>
                                            @foreach (var item in Model.DataList.OrderBy(c => c.Name))
                                            {
                                                <tr>
                                                    <td>@(++sl)</td>
                                                    <td id="tdProductCategoryName_@item.ID">@item.Name</td>
                                                    <td>Yes</td>
                                                    <td>
                                                        <a id="@item.ID" onclick="makeEditble(this);" class="linkPointer" title="Edit"><i class="fa fa-pencil-square-o"></i></a>

                                                        <a id="@item.ID" onclick="makeDeletable(@item.ID);" class="linkPointer" data-toggle="modal" data-target="#productCategoryDeleteModal" title="Delete"
                                                           data-placement="top">
                                                            <i class="glyphicon glyphicon-trash" aria-hidden="true"></i>
                                                        </a>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
}


@using (Html.BeginForm("CommonRawProductCategory", "Configuration", FormMethod.Post, new { id = "commonFinishProductCategoryDeleteFormId", @class = "formValidator", onreset = "resetDDL();" }))
{
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @Html.HiddenFor(model => model.ID, new { Value = "", id = "productCategoryIdDelete" })
    @Html.HiddenFor(model => model.ActionId, new { Value = "", id = "ActionIdDelete" })
    @Html.HiddenFor(model => model.CompanyFK, new { Value = "", id = "CompanyFKDelete" })

    <div class="modal fade" id="productCategoryDeleteModal" data-toggle="modal" data-backdrop="static" data-keyboard="false" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" onclick="resetForm()" class="close pull-right" data-dismiss="modal" aria-label="Close">
                        &times;
                    </button>
                    <h5 class="modal-title"><b>material Category Delete</b></h5>

                </div>
                <div class="modal-body">
                    <div style="text-align:center">
                        <h3>Are you sure to delete this material category?</h3>
                    </div>

                </div>

                <div class="modal-footer">
                    <button type="button" id="btnClose" onclick="resetForm()" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" id="btnDelete" class="deleteId btn btn-primary"><i class="glyphicon glyphicon-check"></i> Confirm</button>
                </div>
            </div>
        </div>
    </div>
}


@section scripts {
    <script type="text/javascript">
        $(document).ready(function () {
            $('#asset').on('change', function () {
                if ($(this).is(':checked')) {
                    $('#accAsset').removeClass('hidden').addClass('d-block');
                } else {
                    $('#accAsset').removeClass('d-block').addClass('hidden');
                }
            });

            $('#equity').on('change', function () {
                if ($(this).is(':checked')) {
                    $('#accEquity').removeClass('hidden').addClass('d-block');
                } else {
                    $('#accEquity').removeClass('d-block').addClass('hidden');
                }
            });

            $('#income').on('change', function () {
                if ($(this).is(':checked')) {
                    $('#accIncome').removeClass('hidden').addClass('d-block');
                } else {
                    $('#accIncome').removeClass('d-block').addClass('hidden');
                }
            });

            $('#expense').on('change', function () {
                if ($(this).is(':checked')) {
                    $('#accExpense').removeClass('hidden').addClass('d-block');
                } else {
                    $('#accExpense').removeClass('d-block').addClass('hidden');
                }
            });
        });

        function makeEditble(elem) {
            if (elem !== null) {
                var rowId = elem.id;
                $('#productCategoryId').val(rowId);
                $('#ActionId').val(2);
                $('#btnSave').html("<i class='fa fa-edit'></i>&nbsp;Update");
                $('#txtProductCategoryName').val($('#tdProductCategoryName_' + rowId).text().trim());
                window.scrollTo({ top: 0, behavior: 'smooth' });

            }
        }

        function makeDeletable(id) {
            if (id !== null) {
                $('#productCategoryIdDelete').val(id);
                $('#ActionIdDelete').val(3);
                $('#CompanyFKDelete').val("@Model.CompanyFK");

            }
        }
        function resetForm() {
            $('#commonFinishProductCategoryFormId')[0].reset();
            $('#btnSave').html("<i class='fa fa-edit'></i>&nbsp;Add");

        }

    </script>
}