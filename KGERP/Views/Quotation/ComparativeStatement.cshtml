@model KGERP.Service.ServiceModel.QuotationCompareModel
@{
    ViewData["Title"] = "Comparative Statement";
    Layout = "~/Views/Shared/_Layout.cshtml";

    KGERP.Service.ServiceModel.QuotationCompareModel searchData = TempData["CompareModel"] as KGERP.Service.ServiceModel.QuotationCompareModel;
}

<style type="text/css">
    input, select, textarea {
        max-width: 100%;
    }

    .ui-datepicker-trigger {
        width: 37px !important;
        height: 33px !important;
        margin-left: 5px !important;
    }

    .dateCustom {
        width: 82% !important;
        border-radius: 1px !important;
        border: 1px solid #d2d6de !important;
        height: 33px !important;
    }
</style>

<section class="content-header">
    <h1>
        <span>
            Comparative Statement
        </span>

    </h1>
    <ol class="breadcrumb">
        <li><a href="~/Home/Index"><i class="fa fa-dashboard"></i>Dashboard</a></li>
        <li class="active">
            <span>
                Comparative Statement
            </span>
        </li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-danger">
                    <div class="box-body">
                        @using (Html.BeginForm("CompareQuotation", "Quotation", FormMethod.Post, new { id = "BRMasterListFormId", @class = "formValidator" }))
                        {
                            @Html.HiddenFor(model => model.CompanyFK, new { id = "CompanyId" })

                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label class="form-label">Select Quotation<sup class="text-danger" title="Required">*</sup></label>
                                        @Html.DropDownListFor(model => model.QuotationIdOne, Model.QuotationList as SelectList, "==Search Quotation==", new { id = "ddlQuotationIdOne", @class = "form-control searchingDropdown", style = "width:100%", required = "required" })
                                        @Html.ValidationMessageFor(model => model.QuotationIdOne, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label class="form-label">Another Quotation<sup class="text-danger" title="Required">*</sup></label>
                                        @Html.DropDownListFor(model => model.QuotationIdTwo, Model.QuotationList as SelectList, "==Search Quotation==", new { id = "ddlQuotationIdTwo", @class = "form-control searchingDropdown", style = "width:100%", required = "required" })
                                        @Html.ValidationMessageFor(model => model.QuotationIdTwo, "", new { @class = "text-danger" })
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="form-group">
                                        <label>&nbsp;</label>
                                        <button type="submit" id="btnSave" class="btn btn-primary btn-block">Genearate Statement</button>
                                    </div>
                                </div>
                            </div>
                        }

                        @if (searchData != null)
                        {
                            <hr />
                            <div class="table-responsive" style="margin: 50px 0;">
                                <table class="table-bordered" style="width: 100%; border-bottom: 0px solid black !important;">
                                    <tr>
                                        <td colspan="2">
                                            <h3 style="text-align: center; text-transform: uppercase; color: gray; font-weight: bold;">Comparative Statement</h3>
                                        </td>
                                    </tr>
                                    <tr>
                                        @foreach (var item in searchData.QuotationMasterModel)
                                        {
                                            <td>
                                                <div style="padding: 15px 7px;">
                                                    <b>Quotation No: </b>@item.QuotationNo
                                                    <br />
                                                    <b>Quotation Name: </b>@item.QuotationName
                                                    <br />
                                                    <b>Quotation Date: </b>@item.QuotationDate.ToString("dd/MM/yyyy")
                                                    <br />
                                                    <b>Supplier Name: </b>@item.SupplierName
                                                </div>

                                                <table class="table table-bordered" style="margin: 0 !important;">
                                                    <tr>
                                                        <th style="width: 25% !important;">Material Name</th>
                                                        <th style="width: 25% !important;">Quality</th>
                                                        <th style="width: 25% !important;">Quantity</th>
                                                        <th style="width: 25% !important;">Unit Rate</th>
                                                        <th style="width: 25% !important;">Total</th>
                                                    </tr>
                                                    @foreach (var detail in item.DetailDataList)
                                                    {
                                                        <tr>
                                                            <td style="width: 25% !important;">@detail.MaterialName</td>
                                                            <td style="width: 25% !important;">@Enum.GetName(typeof(KGERP.Utility.EnumMaterialQuality), detail.MaterialQualityId)</td>
                                                            <td style="width: 25% !important;">@detail.Quantity</td>
                                                            <td style="width: 25% !important;">@detail.UnitPrice</td>
                                                            <td style="width: 25% !important;">@detail.TotalAmount</td>
                                                        </tr>
                                                    }
                                                </table>
                                            </td>
                                        }
                                    </tr>
                                </table>
                                <div style="margin-top: 20px; text-align:right">
                                    <button class="btn btn-primary" onclick="PrintStatement()">Print Statement</button>
                                </div>
                            </div>
                        }

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@Scripts.Render("~/bundles/jqueryui")
@Styles.Render("~/Content/cssjqryUi")

@section scripts {

    <script type="text/javascript">
        function PrintStatement() {
            var divContents = document.querySelector('.table-responsive').innerHTML;
            var printWindow = window.open('', '', 'height=400,width=800');
            printWindow.document.write('<html><head><title>Print</title></head><body>');
            printWindow.document.write(divContents);
            printWindow.document.write('</body></html>');
            printWindow.document.close();
            printWindow.print();
        }
    </script>
}