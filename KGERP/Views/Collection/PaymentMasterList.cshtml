
@{
    ViewData["Title"] = "Payment List";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
@model KGERP.Service.Implementation.VMPaymentMaster

<style type="text/css">

    input, select, textarea {
        max-width: 100%;
    }
    .InlineBtn:hover{
        background-color:green;
        color:white;
        text-decoration:underline;
        
    }
</style>

<section class="content-header">
    <h1>
        Payment List
    </h1>
    <ol class="breadcrumb">
        <li><a href="~/Home/Index"><i class="fa fa-dashboard"></i>Dashboard</a></li>
        <li class="active">Payment List</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="box-danger">

                    <div class="box">
                        <div class="box-danger">
                            <div class="box-header">

                            </div>
                            <!-- /.box-header -->
                            <div class="box-body">
                                <div class="table-responsive">
                                    <table id="KgErpDataTable" class="table table-striped">
                                        <thead>
                                            <tr>
                                                <th>SL</th>
                                                <th>Collection No</th>
                                                <th>
                                                    Collection Date
                                                </th>
                                                <th>
                                                    MR No
                                                </th>
                                                <th>
                                                    MR Date
                                                </th>
                                                <th>
                                                    Bank Charge
                                                </th>

                                                <th>
                                                    Collected Amount
                                                </th>
                                                <th>
                                                   Details
                                                </th>
                                            </tr>
                                        </thead>
                                        @{int sl = 0;
                                        }
                                        <tbody>
                                            @foreach (var item in Model.DataList)
                                            {
                                            <tr>
                                                <td>@(++sl)</td>
                                                <td>
                                                    @item.PaymentNo
                                                </td>
                                                <td>
                                                    @item.TransactionDate
                                                </td>
                                                <td>
                                                    @item.MoneyReceiptNo
                                                </td>
                                                <td>
                                                    @item.MoneyReceiptDate
                                                </td>
                                                <td>
                                                    @item.BankCharge
                                                </td>

                                                <td>
                                                    @item.TotalAmount
                                                </td>
                                                <td><a target="_blank" href="~/Collection/OrderMasterByID?companyId=@item.CompanyFK&customerId=@item.VendorId&paymentMasterId=@item.PaymentMasterId" title="Details"><i class="glyphicon glyphicon-print"></i></a></td>

                                            </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>




                            </div>
                            <div class="box-footer">
                            </div>
                        </div>
                    </div>
                </div>
            </div>


        </div>

    </div>
</section>

@section scripts {

    <script type="text/javascript">


        $(document).ready(function () {
            $('.formValidator').bootstrapValidator();


        });

    </script>
}


