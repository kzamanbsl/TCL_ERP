@model KGERP.Service.Implementation.Production.VMProdReferenceSlave
@using KG.Core.Services

<div class="row">
    <div class="col-lg-12">
        @{
            int styleScheduleCount = Model.DataToList.Count();
            if (styleScheduleCount > 0)
            {
                <div class="table-responsive">
                    <table class="table table-bordered text-nowrap">
                        <thead>
                            <tr class="bg-success">
                                <th>SL</th>

                                <th>Product</th>
                                <th class="center">Received</th>
                                <th class="center">
                                    Purchasing Price
                                </th>
                                <th>
                                    Privious Process
                                </th>                               
                                <th>
                                   Process
                                </th>
                                <th>
                                    Unit
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @for (int i = 0; i < Model.DataToList.Count(); i++)
                            {
                               
                                decimal processQty = Model.DataToList[i].ReceivedQuantity - Model.DataToList[i].PriviousProcessQuantity;
                                
                                <tr>
                                    <th>
                                        @Html.HiddenFor(model => model.DataToList[i].RProductId)
                                        @Html.HiddenFor(model => model.DataToList[i].PurchasePrice)


                                        @(i + 1)
                                    </th>

                                    <td>
                                        @Html.DisplayFor(model => model.DataToList[i].ProductName)
                                    </td>
                                   
                                    <td>
                                        @Html.DisplayFor(model => model.DataToList[i].ReceivedQuantity)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.DataToList[i].PurchasePrice)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(model => model.DataToList[i].PriviousProcessQuantity)
                                    </td>
                                   
                                    <td>
                                        @Html.TextBoxFor(model => model.DataToList[i].Quantity, new { @Value = processQty,  @class = "form-control" })
                                    </td>

                                    <td>
                                        @Html.DisplayFor(model => model.DataToList[i].UnitName)
                                    </td>


                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <div class="row">
                    <div class="col-md-8">

                    </div>
                    <div class="col-lg-4 col-md-4">
                        <button type="submit" id="btnsave" class="btn btn-primary btn-block"><i class='fa fa-plus'></i>Make Product Salable</button>
                    </div>

                </div>

            }
            else
            {
                <div class="col-md-12">
                    <div class="box box-success box-solid">

                        <!-- /.box-header -->
                        <div class="box-body">

                            <div class="form-group" style="text-align:center;">
                                <h3>
                                    There are no Item yet.
                                </h3>
                            </div>



                        </div>
                        <!-- /.box-body -->
                    </div>
                    <!-- /.box -->
                </div>
            }
        }

    </div>
</div>


<script>
    $(document).ready(function () {


        $("#select_all").change(function () {  //"select all" change
            $(".checkToInstruction").prop('checked', $(this).prop("checked")); //change all ".checkbox" checked status
        });

        //".checkbox" change
        $('.checkToInstruction').change(function () {
            //uncheck "select all", if one of the listed checkbox item is unchecked
            if (false == $(this).prop("checked")) { //if this item is unchecked
                $("#select_all").prop('checked', false); //change "select all" checked status to false
            }
            //check "select all" if all checkbox items are checked
            if ($('.checkToDownload:checked').length == $('.checkToDownload').length) {
                $("#select_all").prop('checked', false);
            }
        });




        $("#chkIsDefineBin input:checkbox").change(function () {
            //var ischecked = $(this).is(':checked');
            //if (ischecked) {
            //    $("#linkDefine").show();
            //}
            //else {
            //    $("#linkDefine").hide();

            //}

            alert('uncheckd ' + $(this).val());
        });

    });


</script>