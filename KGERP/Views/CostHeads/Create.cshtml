@model KGERP.Service.ServiceModel.BookingHeadInsertModel
@*CostName = model.CostName,
                CompanyId = model.CompanyId,
                IsActive = true,
                CreatedBy = model.CreatedBy,*@
@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm("Create", "CostHeads", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model=>model.CompanyId)
    @Html.HiddenFor(model => model.CreatedDate)
    @Html.HiddenFor(model => model.CreatedBy)

    <div class="form-horizontal">
        <h4>Add New Cost Head</h4>
        <hr style="border-color:#ff0000; padding:0px;margin-top: 5px;margin-bottom: 5px; border-width: 2px;" />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            <div class="col-md-8">
                @Html.LabelFor(model => model.CostName, htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.CostName, new { htmlAttributes = new { @class = "form-control", @autocomplete = "off" } })
                    @Html.ValidationMessageFor(model => model.CostName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-4 form-group">
                <a href="@Url.Action("Index")" class="btn btn-danger">
                    <span class="glyphicon glyphicon-remove-circle"></span>   Close
                </a>
                <button type="submit" class="btn btn-primary " onclick="javascript: return window.confirm('Are you sure?');" style="margin-left: 20px;"><span class="glyphicon glyphicon-floppy-disk"></span>Save</button>
            </div>
        </div>


        @*<div class="form-group">
            <div class="col-md-offset-7 col-md-4">
                <a href="@Url.Action("Index")" class="btn btn-danger">
                    <span class="glyphicon glyphicon-remove-circle"></span>   Close
                </a>
                <button type="submit" class="btn btn-primary " onclick="javascript: return window.confirm('Are you sure?');" style="margin-left: 20px;"><span class="glyphicon glyphicon-floppy-disk"></span>Save</button>
            </div>
        </div>*@
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")
}