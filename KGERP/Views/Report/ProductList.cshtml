@model KGERP.Data.CustomModel.ReportCustomModel

<div class="row">
    <div class="col-md-12" style="background-color:#f1f1f1;padding:5px">
        <span style="font-size:20px;color:#000000">Product List Report</span>
    </div>
</div>
<br />
@using (Html.BeginForm("GetProductListReport", "Report", FormMethod.Get, new { @id = "idForm" }))
{

    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.CompanyId, new { @id = "hfCompanyId" })
    <div class="row">
        <div class="col-md-6">
            <div class="form-group">
                @Html.LabelFor(model => model.ProductType, htmlAttributes: new { @class = "control-label col-md-4" })
                <select class="col-md-8 dropdownsize form-control" style="color:#000000; background-color:#ffffff;height:34px;font-size:15px" name="ProductType" id="ProductType">
                    <option value="F">Finish Product</option>
                    <option value="R">Raw Material</option>
                </select>
            </div>
        </div>

        <div class="col-md-6">
            <div class="form-group">
                <select class="pull-left" style="color:#ffffff; background-color:#dd4b39;height:34px;font-size:15px" name="ReportType" id="ReportType">
                    <option value="PDF">PDF</option>
                    <option value="EXCEL">EXCEL</option>
                    <option value="WORD">WORD</option>
                </select>
                <input type="submit" name="EXPORT" value="EXPORT" class="btn btn-success pull-left" formtarget="_blank" />

            </div>
        </div>
    </div>

}






