@model KGERP.Data.CustomModel.ReportCustomModel

<style>
    .customStyle {
        border-radius: 0;
        padding: 7px 10px;
        width: 90%;
        border: 1px solid #8d8989;
    }

    .ui-datepicker-trigger {
        border-radius: 0;
        padding: 7px 10px;
        border-left: 0px;
        background: #fff;
        border: 1px solid #8d8989;
    }
</style>

<div class="row">
    <div class="col-md-12" style="background-color:#f1f1f1;padding:5px">
        <span style="font-size:20px;color:#000000">Depot Wise & Party Wise Sale Quantity and Amount</span>
    </div>
</div>
<br />
@using (Html.BeginForm("GetDateWiseSaleQtyAndAmount", "Report", FormMethod.Get, new { @id = "idForm" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.CompanyId, new { @id = "hfCompanyId" })
    @Html.HiddenFor(model => model.ReportName)
    @Html.HiddenFor(model => model.ProductType)
