@model IList<KGERP.Service.ServiceModel.LandReceiverModel>
@{
    ViewBag.Title = "Index";
}
<link href="~/Content/CustomCss/search-form.css" rel="stylesheet" />

@using (Html.BeginForm("IndexReceiver", "LandOwner", FormMethod.Get, new { @class = "example" }))
{
    <div class="row">
        <div class="col-md-6">
            <span style="font-size:20px;font-weight:bold">
                Land Receiver
            </span>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                @Html.Editor("searchText", new { htmlAttributes = new { @autocomplete = "off", value = "", @placeholder = "Search..." } })
                <button type="submit"><i class="fa fa-search "></i></button>
            </div>
        </div>
        <div class="col-md-2 pull-right">
            <div class="form-group">
                <a href="@Url.Action("CreateOrEditReceiver", new { id = 0})" class="btn btn-primary pull-right">
                    <span class="glyphicon glyphicon-plus-sign"></span> Add 
                </a>
            </div>
        </div>
    </div>
}

<div class="row">
    <hr style="border-color:#32527B; padding:0px;margin-top: 5px;margin-bottom: 5px; border-width: 2px;" />
    <table class="table table-striped table-condensed">
        <tr style="background-color:#3c8dbc;color:#ffffff">
            <th>
                SL
            </th>

            <th>
                @Html.DisplayNameFor(model => model.First().LandReceiverName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().ShortName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Phone)
            </th>


            <th class="text-center">Action</th>
        </tr>

        @foreach (var item in Model.Select((x, i) => new { Data = x, Index = i }))
        {
        <tr>
            <td>
                @(item.Index + 1)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Data.LandReceiverName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Data.ShortName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data.Address)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Data.Phone)
            </td>



            <td class="text-center">
                <a href="@Url.Action("CreateOrEditReceiver", new { id = item.Data.LandReceiverId})" title="Edit" class="btn btn-info btn-xs">
                    <i class="fa fa-edit" style="font-size:15px;" aria-hidden="true"></i>
                </a>

                @*<a href="@Url.Action("Delete", new { id = item.Data.ProductId,companyId=Request.QueryString["companyId"],type=Request.QueryString["type"] })" title="Delete" class="btn btn-danger btn-xs">
                <i class="fa fa-trash" style="font-size:15px;" aria-hidden="true"></i>
            </a>*@
            </td>
        </tr>
        }

    </table>


</div>


@section Scripts{
    <script type="text/javascript">


    </script>
}