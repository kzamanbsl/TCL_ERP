                    <b style="font-size:27px; color: #4CAF50; margin-right:20px">  @Model.CompanyName  </b> <b style="font-size:27px;"> Monthly Financial Report</b> @if (Model.SectionEmployeeId == 0)
                    {<b class="text-danger"> @Model.ValidationSMS</b>}
                </li>
            </ol>
        </div>
    </div>
</div>

<div class="approvalList">
    <div class="container-fluid">

        @using (Html.BeginForm("AccountingApproval", "ApprovalProcessSystem", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.CompanyId, new { @id = "companyId" })
            <input id="ActionId" name="ActionId" type="hidden" value="100" />
            <div class="container-fluid" style="margin-top: 20px; border: 1px solid #f0ffff; padding: 28px 18px 21px 18px; background: #4caf501f ">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Report Months </label>
                            @Html.DropDownListFor(model => model.Month, Model.MonthList as SelectList, "==Select Month ==", new { id = "ddlMonth", @class = "form-control ddlReset", style = "width:100%" })
                            @Html.ValidationMessageFor(model => model.Month, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label class="control-label">Report Years<b style="color:red"> *</b> </label>
                            @Html.DropDownListFor(model => model.Year, new SelectList(Model.YearsList, "Value", "Text"), "---Select Years---", new { id = "Year", @class = "searchingDropdown  customStyle", @style = "width: 100%;" })
                            @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })
                        </div>
                    </div>
                    <div class="col-md-4"> <input type="submit" value="Show  Approval Requst" style="width:100%;height:40px;margin-top:20px" class="btn btn-primary" /> </div>
                </div>
            </div>
        }

        <div class="row">
            <div class="col-md-4">
                <h3 style="margin-bottom: 20px;margin-top:0px; color: green; font-weight:600"> <span id="copyId"> @((MonthListEnum)Model.Month), @Model.Year</span> Approval list </h3>
            </div>
            <div class="col-md-2"></div>
            <div class="col-md-3"></div>
        </div>
        <div class="table-responsive">
            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th>Sl</th>
                        <th>Report Name</th>
                        <th>Session</th>
                        <th class="text-right">Action </th>

                    </tr>
                </thead>
                <tbody>
                    @{int sl = 0;}
                    @foreach (var item in Model.datalist)
                    {
                        <tr>
                            <td>@(++sl) </td>
                            <td>@item.ReportCategoryName</td>
                            <td>@((MonthListEnum)item.Month) , @item.Year</td>
                            <td class="text-right">

                                @if (item.ApprovalStatus == 2 && item.ApprovalFor == Model.SectionEmployeeId && item.FinalStatus != 4)
                                {
                                    <a class="btn btn-primary btn-sm" onclick="SubmittedReport(@item.ReportApprovalDetalisId,'@item.ReportApprovalId')" data-toggle="modal" data-target="#exampleModal" style="width:147px"> Approve</a>
                                }
                                else if (item.ApprovalStatus == 3 && item.FinalStatus != 4)
                                {
                                    <span class="badge badge-success">Approved</span>

                                }
                                else if (item.ApprovalStatus == 1 && item.FinalStatus != 4)
                                {
                                    <span class="badge badge-warning">Pending</span>

                                }
                                else
                                {
                                    <button class=" btn-sm btn btn-danger disabled">Rejected</button>

                                }

                                @if (item.FinalStatus != 4)
                                {
                                    <a href="/Report/ApprovalBalanceSheetReport?companyId=@Model.CompanyId&&reportName=@item.ReportName&&month=@item.Month&&years=@item.Year&&ReportGroup=@item.ReportGroup&&ReportCategoryId=@item.ReportCategoryId" target="_blank" class="btn btn-sm btn-primary"> View Report</a>
                                }
                                <a href="#" onclick="ViewReport(@item.ReportApprovalId)" class="btn btn-info btn-sm" data-toggle="modal" data-target=".bd-example-modal-lg">
                                    <i class="glyphicon glyphicon-eye-open"></i>
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>



    </div>
</div>


<!-- Modal -->
@using (Html.BeginForm("AccountingApproval", "ApprovalProcessSystem", FormMethod.Post))
{
    @Html.HiddenFor(m => m.Month, new { @id = "Month" })
    @Html.HiddenFor(m => m.Year, new { @id = "Year" })
    @Html.HiddenFor(m => m.CompanyId, new { @id = "companyId" })
    @Html.HiddenFor(m => m.ReportApprovalId, new { @id = "ApprovalId" })
    @Html.HiddenFor(m => m.ReportApprovalDetalisId, new { @id = "ReportApprovalDetalisId" })
  <input id="ActionId" name="ActionId" type="hidden" value="11" />
