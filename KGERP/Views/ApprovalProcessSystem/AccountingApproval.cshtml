                        <select class="form-control" id="ApprovalStatus" name="ApprovalStatus">
                            <option value="3">Approve</option>
                            <option value="4">Reject</option>
                        </select>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <input type="submit" value="Save Change" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
}

<!-- Large modal -->
<div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title"> <b id="exampleModalScrollableTitle"> </b></h4>
            </div>
            <div class="modal-body">
                <div class="table-responsive">
                    <table class="table">
                        <thead class="thead-light">
                            <tr>
                                <th>Sl</th>
                                <th>Authorized By</th>
                                <th> Approved date </th>
                                <th>Status </th>
                            </tr>
                        </thead>
                        <tbody id="Installment">
                        </tbody>
                    </table>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")
<script>
    var apdatalist= @Html.Raw(Json.Encode(Model.datalist));
        function SubmittedReport(id, Approvalid) {
            $("#ReportApprovalDetalisId").val(id);
            $("#ApprovalId").val(Approvalid);

        }

    function ViewReport(id) {
        var LObj = apdatalist.find(x => x.ReportApprovalId === id);
        var text = $("#copyId").text();
        $("#exampleModalScrollableTitle").text(LObj.ReportCategoryName + " for (" +text +")");
        $.ajax({
            type: "GET",
            url: "@Url.Action("ApprovalSignotory", "ApprovalProcessSystem")",
            datatype: "Json",
            data: {approvalId:id},
            success: function (data) {
                var tag = '';
                var count = data.datalist.langth;
                $.each(data.datalist, function (key, item) {

                    tag += '<tr id="' + key + '">';
                    tag += '<td> ' + (key + 1) + '</td>';
                    if (item.OrderNo === item.FrowardId && item.ApprovalStatus==2) {
                        tag += '<td style="background-color: #ffeb3b!important;"> ' + item.EmployeeName + '</td>';
                    } else {
                        tag += '<td> ' + item.EmployeeName + '</td>';
                    }

                    if (item.Approvdate == null) {
                        tag += '<td> <span> ......... </span></td>';
                    } else {
                        var StringApprovdate = DateCustom(item.Approvdate);
                        tag += '<td> ' + StringApprovdate + '</td>';
                    }
                    if (count==key && item.ApprovalStatusName == "Approved") {
                        tag += '<td> <span> Submited </span></td>';
                    } else {
                        tag += '<td> ' + item.ApprovalStatusName + '</td>';
                    }
                    tag += '</tr>';
                })
                $('#Installment').html(tag);
            }
        });
        }

        function DateCustom(orderDate) {
            var dateString = orderDate.substr(6);
            var currentTime = new Date(parseInt(dateString));
            var month = currentTime.getMonth() + 1;
            if (month < 10) {
                month = "0" + month;
            }

            var day = currentTime.getDate();
            var year = currentTime.getFullYear();
            var date = day + "-" + month + "-" + year;
            return date;
        }


</script>
}
