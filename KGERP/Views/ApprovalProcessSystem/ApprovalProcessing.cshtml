@section Scripts {
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")
    <script>
    var apdatalist= @Html.Raw(Json.Encode(Model.datalist));

    function ViewReport(id) {
        var LObj = apdatalist.find(x => x.ReportApprovalId === id);
        var text = $("#copyId").text();
        $("#exampleModalScrollableTitle").text(LObj.ReportCategoryName + " for (" +text +")");
        $.ajax({
            type: "GET",
            url: "@Url.Action("ApprovalSignotory", "ApprovalProcessSystem")",
            datatype: "Json",
            data: {approvalId:id},
            success: function (data) {
             
                var tag = '';
                var count = data.datalist.length-1;
               
                $.each(data.datalist, function (key, item) {
                    
                    tag += '<tr id="' + key + '">';
                    tag += '<td> ' + (key + 1) + '</td>';
                    if (item.OrderNo === item.FrowardId && item.ApprovalStatus==2) {
                        tag += '<td style="background-color: #ffeb3b!important;"> ' + item.EmployeeName + '</td>';
                    } else {
                        tag += '<td> ' + item.EmployeeName + '</td>';
                    }
                
                    if (item.Approvdate == null) {
                        tag += '<td> <span> ...... </span></td>';
                    } else {
                        var StringApprovdate = DateCustom(item.Approvdate);
                        tag += '<td> ' + StringApprovdate + '</td>';
                    }
                    if (count == key&& item.ApprovalStatusName =="Approved") {
                        tag += '<td> <span> Submited </span></td>';
                    } else {
                        tag += '<td> ' + item.ApprovalStatusName + '</td>';
                    }
                    tag += '</tr>';
                })
                $('#Installment').html(tag);
            }
        });
        }

        function DateCustom(orderDate) {
            var dateString = orderDate.substr(6);
            var currentTime = new Date(parseInt(dateString));
            var month = currentTime.getMonth() + 1;
            if (month < 10) {
                month = "0" + month;
            }

            var day = currentTime.getDate();
            var year = currentTime.getFullYear();
            var date = day + "-" + month + "-" + year;
            return date;
        }

        function SubmittedReport(id) {
            var LObj = apdatalist.find(x => x.ReportApprovalId === id);
            $("#exampleModalLabel").text(LObj.ReportCategoryName + " for ( " + LObj.Month + " - " + LObj.Year + ")");
            let text = "Are you sure to Submitted report Approval!\nPress a button!\nEither OK or Cancel.";
            if (confirm(text) == true) {
               $.ajax({
                type: "GET",
                url: "@Url.Action("ApprovalStutasUpdate", "ApprovalProcessSystem")",
                datatype: "Json",
                data: { approvalId: id },
                success: function (data) {
                    if (data == 1) {
                        location.reload();
                    }
                    else {
                        alert("something is wrong");
                    }
                }
            })
            } else {
                text = "You canceled!";
            }

        }



        function DeleteReport(id) {
            let text = "Are you sure to Delete report Approval!\nPress a button!\nEither OK or Cancel.";
            if (confirm(text) == true) {
               $.ajax({
                type: "GET",
                url: "@Url.Action("ApprovalDelete", "ApprovalProcessSystem")",
                datatype: "Json",
                data: { approvalId: id },
                success: function (data) {
                    if (data == 1) {
                        location.reload();
                    }
                    else {
                        alert("something is wrong");
                    }
                }
            })
            } else {
                text = "You canceled!";
            }
        }



    </script>
}
