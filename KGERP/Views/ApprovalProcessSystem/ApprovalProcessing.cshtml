@using (Html.BeginForm("ApprovalProcessing", "ApprovalProcessSystem", FormMethod.Post))
{
    @Html.HiddenFor(m => m.CompanyId, new { @id = "companyId" })
    <div class="container-fluid" style="margin-top: 20px; border: 1px solid #f0ffff; padding: 28px 18px 21px 18px; background: #4caf501f ">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Report Report<b style="color:red"> *</b> </label>

                    @Html.DropDownListFor(model => model.ReportCategoryId, new SelectList(Model.reportCatagoryList, "Value", "Text"), "---Select Report---", new { id = "ReportCategoryId", @class = "searchingDropdown  customStyle", @style = "width: 100%;", required = "required" })
                    @Html.ValidationMessageFor(model => model.ReportCategoryId, "", new { @class = "text-danger" })

                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label>Report Months </label>
                    @Html.DropDownListFor(model => model.Month, Model.MonthList as SelectList, "==Select Month ==", new { id = "ddlMonth", @class = "form-control ddlReset", style = "width:100%", required = "required" })
                    @Html.ValidationMessageFor(model => model.Month, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label class="control-label">Report Years<b style="color:red"> *</b> </label>
                    @Html.DropDownListFor(model => model.Year, new SelectList(Model.YearsList, "Value", "Text"), "---Select Years---", new { id = "Year", @class = "searchingDropdown  customStyle", @style = "width: 100%;", required = "required" })
                    @Html.ValidationMessageFor(model => model.Year, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-5"></div>
            <div class="col-md-2 " style="margin-top:20px">
                <input type="submit" data-confirm="Are you sure to  generate approval?" value="Apply Approval Process" style="width:100%;height:45px" class="btn btn-primary" />
            </div>
            <div class="col-md-5 "></div>
        </div>
    </div>
}

@if (Model.datalist != null)
{


    <div class="approvalList">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-4">
                    <h3 style="margin-bottom: 20px;margin-top:0px; color: green; font-weight:600">  <span id="copyId"> @DateTime.Now.AddMonths(-1).ToString("MMMM-yyyy") </span> Approval list </h3>
                </div>
                <div class="col-md-2"></div>
                <div class="col-md-3"></div>
                <div class="col-md-3 text-right">
                    <a href="/ApprovalProcessSystem/AccountingApprovalList?companyId=@Model.CompanyId" class="btn btn-primary"> All Approval List</a>
                </div>
            </div>




            <div class="table-responsive">
            <table class="table">
                <thead class="thead-light">
                    <tr>
                        <th>Sl</th>
                        <th>Report Name</th>
                        <th>Submission Status </th>
                        <th>Approval Status </th>
                        <th class="text-right">Action </th>

                    </tr>
                </thead>
                <tbody>
                    @{int sl = 0;}
                    @foreach (var item in Model.datalist)
                    {
                        <tr>
                            <td>        @(++sl) </td>
                            <td>@item.ReportCategoryName</td>
                            <td>
                                @if (item.Issubmited)
                                {
                                    <b class="text-success"> Submitted</b>
                                }
                                else
                                {
                                    <a class="btn btn-primaryl0 btn-sm" onclick="SubmittedReport(@item.ReportApprovalId)"> <b>Submit </b> </a>
                                }
                            </td>

                            <td>
                                @if (item.FinalStatus == 1)
                                {
                                    <b class="text-bg-info"> New </b>
                                }
                                else if (item.FinalStatus == 2)
                                {
                                    <b class="text-warning"> Pending</b>
                                }
                                else if (item.FinalStatus == 3)
                                {
                                    <b class="text-success"> Approved</b>
                                }
                                else
                                {
                                    <b class="text-danger"> Rejected</b>
                                }
                            </td>

                            <td class="text-right">
                                @if (item.FinalStatus != 4&&item.FinalStatus!=1)
                                {
                                    <a href="/Report/ApprovalBalanceSheetReport?companyId=@Model.CompanyId&&reportName=@item.ReportName&&month=@item.Month&&years=@item.Year&&ReportGroup=@item.ReportGroup&&ReportCategoryId=@item.ReportCategoryId" target="_blank" class="btn btn-sm btn-primary"> View Report</a>
                                }

                                @if (item.FinalStatus == 1)
                                {
                                    <a onclick="DeleteReport(@item.ReportApprovalId)" class="btn btn-danger btn-sm" data-toggle="modal" data-target="#DeleteModal">
                                        <i class="glyphicon glyphicon-trash"></i>
                                    </a>
                                }
                                else
                                {
                                    <a class="btn btn-danger btn-sm disabled">
                                        <i class="glyphicon glyphicon-trash"></i>
                                    </a>
                                }


                                <a href="#" onclick="ViewReport(@item.ReportApprovalId)" class="btn btn-info btn-sm" data-toggle="modal" data-target=".bd-example-modal-lg">
                                    <i class="glyphicon glyphicon-eye-open"></i>
                                </a>

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
        </div>
    </div>
}

