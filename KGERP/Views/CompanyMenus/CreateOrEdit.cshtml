@model KGERP.ViewModel.CompanyMenuViewModel

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.CompanyMenu.CompanyMenuId)

    <div class="form-horizontal">
        <h4>Comapny Menu @Model.CompanyMenu.ButtonName</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.CompanyMenu.CompanyId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.CompanyMenu.CompanyId, new SelectList(Model.Companies, "Value", "Text"), "--Select--", htmlAttributes: new { @class = "dropdownsize form-control" })
                @Html.ValidationMessageFor(model => model.CompanyMenu.CompanyId, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CompanyMenu.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.CompanyMenu.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.CompanyMenu.Name, "", new { @class = "text-danger" })
            </div>
        </div>
      
        <div class="form-group">
                @Html.LabelFor(model => model.CompanyMenu.OrderNo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CompanyMenu.OrderNo, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
  


        <div class="form-group">
            @Html.LabelFor(model => model.CompanyMenu.IsActive, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.CompanyMenu.IsActive)
                    @Html.ValidationMessageFor(model => model.CompanyMenu.IsActive, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="@Model.CompanyMenu.ButtonName" class="btn btn-primary" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index", new { companyId = Request.QueryString["companyId"] })
</div>
