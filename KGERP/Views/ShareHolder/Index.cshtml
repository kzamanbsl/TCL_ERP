@model KGERP.Service.ServiceModel.ShareHolderModel

@{
    var message = TempData["successMessage"];
    ViewBag.Title = "Share Holder List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <h1>
        Share Holder List
    </h1>


    <ol class="breadcrumb">
        <li><a href="~/Home/Index"><i class="fa fa-dashboard"></i>Dashboard</a></li>
        <li>
            <a href="@Url.Action("CreateOrEdit", new { id = 0})" class="btn btn-primary pull-right">
                <span class="fa fa-plus"></span> Add Member
            </a>
        </li>
    </ol>
</section>
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-danger">
                    <div class="box-body">
                        <div class="table-responsive">
                            <table id="KgErpDataTable" style="width:100%; background-color:#ddd;" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th style="width:5%;">SL</th>
                                        <th style="width:10%;">Type</th>
                                        <th style="width:15%;">Name</th>
                                        <th style="width:10%;">DateOfBirth</th>
                                        <th style="width:10%;">NID</th>
                                        <th style="width:10%;">Present Address</th>
                                        <th style="width:10%;">Phone</th>
                                        <th style="width:5%;">IsActive</th>
                                        <th style="width:10%;">Report</th>
                                        <th style="width:10%;">Action</th>
                                    </tr>
                                </thead>
                                @{int sl = 0;
                                }
                                <tbody>
                                    @foreach (var item in Model.DataList)
                                    {
                                        <tr>
                                            <td>
                                                @(++sl)
                                            </td>
                                            <td>
                                                @item.ShareHolderType
                                            </td>
                                            <td>@item.Name</td>
                                            <td>
                                                @item.DateOfBirth
                                            </td>
                                            <td>
                                                @item.NID
                                            </td>
                                            <td>
                                                @item.PresentAddress
                                            </td>
                                            <td>
                                                @item.Phone
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => @item.IsActive)
                                            </td>
                                            <td>
                                            </td>
                                            <td>
                                                <a href="@Url.Action("CreateOrEdit", new { id = @item.ShareHolderId })" title="Edit" class="btn btn-info btn-xs">
                                                    <i class="fa fa-edit" aria-hidden="true"></i>
                                                </a>
                                            </td>
                                        </tr>

                                    }
                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")

    <script type="text/javascript">
        $('.datepicker').datepicker({
            dateFormat: "dd/mm/yy",
            showOn: 'both',
            buttonText: "<i class='fa fa-calendar'></i>",
            changeMonth: true,
            changeYear: true,
            yearRange: "2001:+50"
        });
        var message = '@message';
    if(message){
        alert(message);
    }

    </script>

}
