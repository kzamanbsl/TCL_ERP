                        type: "POST",
                        url: "@Url.Action("GetSinglDemandMasters", "Procurement")",
                        datatype: "Json",
                    data: { id: rowId },
                    success: function (data) {

                            $('#submitOrDraftPOCIDText').text(data.DemandNo);

