        // claculate workable demand with unit rate and show to total
        $(document).ready(function () {

            var RemainingDemand = $("#txtRemainingDemand");
            var inputWorkableDemand = $("#txtWorkableDemand");
            var inputUnitPrice = $("#txtUnitPrice");
            var showTotalPrice = $("#txtTotalPrice");

            function calculateTotalPrice() {

                var remainingValue = parseFloat(RemainingDemand.val()) || 0;
                var demandValue = parseFloat(inputWorkableDemand.val()) || 0;
                var unitValue = parseFloat(inputUnitPrice.val()) || 0;

                if (!isNaN(remainingValue) && !isNaN(demandValue) && !isNaN(unitValue)) {
                    if ($("#ddlWorkOrderFor").val() == @((int)EnumWorkOrderFor.Requisition)
                       || $("#ddlWorkOrderFor").val() == @((int)EnumWorkOrderFor.Direct_Purchase))
                    {
                        if (demandValue <= remainingValue || demandValue === 0) {
                            $("#demandValidate").text("");
                            totalPrice = demandValue * unitValue;
                            showTotalPrice.val(totalPrice.toFixed(2));
                        } else {
                            inputWorkableDemand.val(remainingValue);
                            totalPrice = remainingValue * unitValue;
                            showTotalPrice.val(totalPrice.toFixed(2));
                            $("#demandValidate").text("Demand cannot exceed the remaining amount!");
                        }
                    } else {
                        totalPrice = demandValue * unitValue;
                        showTotalPrice.val(totalPrice.toFixed(2));
                    }
                }
            }

            inputWorkableDemand.on("input", calculateTotalPrice);
            inputUnitPrice.on("input", calculateTotalPrice);


