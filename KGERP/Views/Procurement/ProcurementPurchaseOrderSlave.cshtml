                        showApprovedDemand.val(data.ApprovedDemand);
                        showRecievedSoFar.val(data.RecivedSoFar);
                        showRemaining.val(data.ApprovedDemand - data.RecivedSoFar);
                        showUnitPrice.val(data.UnitPrice);
