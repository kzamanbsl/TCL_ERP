                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="message-text" class="col-form-label">Country of Origin:</label>
                                                @Html.DropDownListFor(model => model.CountryId, Model.CountryList as SelectList, "==Country of Origun==", new { id = "ddlCountryId", @class = "searchingDropdown form-control", @style = "width:100%" })
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label for="message-text" class="col-form-label">Final Destination:</label>
                                                @Html.DropDownListFor(model => model.FinalDestinationCountryFk, Model.CountryList as SelectList, "--Final Destination--", new { id = "ddlFinalDestinationCountryFk", @class = "searchingDropdown form-control", @style = "width:100%" })
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>Freight Charge:</label>
                                                @Html.EditorFor(model => model.FreightCharge, new { htmlAttributes = new { id = "txtFreightCharge", @class = "form-control" } })
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>Other Charge:</label>
                                                @Html.EditorFor(model => model.OtherCharge, new { htmlAttributes = new { id = "txtOtherCharge", @class = "form-control" } })
                                            </div>
                                        </div>
                                    </div>

                                    <div class="row">
                                        @if (Model.CompanyFK == (int)CompanyNameEnum.KrishibidSeedLimited)
                                        {
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label class="col-form-label">LC No:</label>
                                                    @Html.DropDownListFor(model => model.LCHeadGLId, Model.LCList as SelectList, "==Select L/C==", new { id = "ddlLCNo", @class = "searchingDropdown form-control", style = "width:100%" })
                                                    @Html.ValidationMessageFor(model => model.LCHeadGLId, "", new { @class = "text-danger" })
                                                </div>
                                            </div>
                                        }
                                        else
                                        {
                                            <div class="col-md-3">
                                                <div class="form-group">
                                                    <label>LC No:</label>
                                                    @Html.EditorFor(model => model.LCNo, new { htmlAttributes = new { id = "txtLCNo", @class = "form-control" } })
                                                </div>
                                            </div>
                                        }

                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>L/C Value:</label>
                                                @Html.EditorFor(model => model.LCValue, new { htmlAttributes = new { id = "txtLCValue", @class = "form-control" } })
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>Insurance No:</label>
                                                @Html.EditorFor(model => model.InsuranceNo, new { htmlAttributes = new { id = "txtInsuranceNo", @class = "form-control" } })
                                            </div>
                                        </div>
                                        <div class="col-md-3">
                                            <div class="form-group">
                                                <label>Premium Value:</label>
                                                @Html.EditorFor(model => model.PremiumValue, new { htmlAttributes = new { id = "txtPremiumValue", @class = "form-control" } })
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row" style="display:none;">
                                    <div class="col-12 text-right">
                                        <div class="form-group">
                                            @Html.CheckBoxFor(model => model.IsOpening, new { id = "checkboxOpening", @class = "form-check" })
                                            <label for="checkboxOpening" class="form-check-label">Is Opening?</label>
                                        </div>
                                    </div>
                                </div>
                            }
                            @if (Model.Status == (int)POStatusEnum.Draft)
                            {
                                <div class="row">

                                    <div class="col-md-4 hidden" id="inputRequisition">
                                        <div class="form-group">
                                            <label>Select Requisition No :</label>
                                            @Html.DropDownListFor(model => model.RequisitionMasterId, Model.Requisitions as SelectList, "==Select Requisition No==", new { id = "ddlRequisitionId", onchange = "showBoQMaterial()", @class = "form-control searchingDropdown", style = "width:100%" })
                                            @Html.ValidationMessageFor(model => model.RequisitionMasterId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="col-md-3 d-block directPurchhaseHiddenField" id="inputType">
                                        <div class="form-group">
                                            <label>Select Work Order Type :</label>
                                            @Html.DropDownListFor(model => model.MaterialTypeId, Model.MaterialTypeList as SelectList, "==Work Order Type==", new { id = "ddlMaterialTypeId", onchange = "GetSubtypeByTypeId()", @class = "form-control searchingDropdown", style = "width:100%" })
                                            @Html.ValidationMessageFor(model => model.MaterialTypeId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="col-md-3 d-block directPurchhaseHiddenField" id="inputSubtype">
                                        <div class="form-group">
                                            <label>Select Work Order Subtype :</label>
                                            @Html.DropDownListFor(model => model.MaterialSubtypeId, Model.MaterialSubtypeList as SelectList, "==Work Order Subtype==", new { id = "ddlMaterialSubtypeId", onchange = "GetMaterialBySubtypeId()", @class = "form-control searchingDropdown", style = "width:100%" })
                                            @Html.ValidationMessageFor(model => model.MaterialSubtypeId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="col-md-3" id="inputMaterial">
                                        <div class="form-group">
                                            <label>Select Material Item :</label>
                                            @Html.DropDownListFor(model => model.MaterialItemId, Model.MaterialItemList as SelectList, "==Select Material==", new { id = "ddlMaterialItemId", onchange = "getUnitName()", @class = "form-control searchingDropdown", required = "required", style = "width:100%" })
                                            @Html.ValidationMessageFor(model => model.MaterialItemId, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="col-md-3" id="inputUnit">
                                        <div class="form-group">
                                            <label>Unit Name:</label>
                                            @Html.TextBoxFor(model => model.UnitName, new { id = "showUnitName", @class = "form-control", placeholder = "Material unit", ReadOnly = true })
                                            @Html.HiddenFor(model => model.UnitId, new { id = "txtUnitId" })
                                        </div>
                                    </div>

                                    <div class="col-md-4 hidden" id="inputApproved">
                                        <div class="form-group">
                                            <label>Approved Demand :</label>
                                            @Html.TextBoxFor(model => model.ApprovedDemand, new { id = "txtApprovedDemand", type = "number", step = "0.01", @class = "form-control", placeholder = "Approved demand", required = "Required", Readonly = "true" })
                                            @Html.ValidationMessageFor(model => model.ApprovedDemand, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="col-md-4 hidden" id="inputReceive">
                                        <div class="form-group">
                                            <label>Received So far Demand :</label>
                                            @Html.TextBoxFor(model => model.ReceivedDemand, new { id = "txtRecievedDemand", type = "number", step = "0.01", @class = "form-control", placeholder = "Received so far demand", required = "Required", Readonly = "true" })
                                            @Html.ValidationMessageFor(model => model.ReceivedDemand, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="col-md-4 hidden" id="inputRemaining">
                                        <div class="form-group">
                                            <label>Remaining Demand :</label>
                                            @Html.TextBoxFor(model => model.RemainingDemand, new { id = "txtRemainingDemand", type = "number", step = "0.01", @class = "form-control", placeholder = "Remaining demand", required = "Required", Readonly = "true" })
                                            @Html.ValidationMessageFor(model => model.RemainingDemand, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Workable Demand :</label>
                                            @Html.TextBoxFor(model => model.WorkableDemand, new { id = "txtWorkableDemand", type = "number", step = "0.01", @class = "form-control", placeholder = "Workable demand", required = "Required" })
                                            @Html.ValidationMessageFor(model => model.WorkableDemand, "", new { @class = "text-danger" })
                                            <span class="text-danger" id="demandValidate"></span>
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Unit Price :</label>
                                            @Html.TextBoxFor(model => model.UnitPrice, new { id = "txtUnitPrice", type = "number", step = "0.01", @class = "form-control", placeholder = "Unit price", required = "Required", Readonly = "true" })
                                            @Html.ValidationMessageFor(model => model.UnitPrice, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="col-md-4">
                                        <div class="form-group">
                                            <label>Total Price:</label>
                                            @Html.TextBoxFor(model => model.TotalPrice, new { id = "txtTotalPrice", type = "number", step = "0.01", @class = "form-control", placeholder = "Total price", required = "Required", Readonly = "true" })
                                            @Html.ValidationMessageFor(model => model.TotalPrice, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                </div>
                            }

                        </div>
                        <div class="box-footer">
