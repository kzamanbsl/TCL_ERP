                                            @Html.ValidationMessageFor(model => model.WorkOrderFor, "", new { @class = "text-danger" })
                                        </div>
                                    </div>

                                    <div class="col-md-3  directPurchhaseHiddenField">
                                        <div class="form-group">
                                            <label>Payment Method :</label>
