                                <div class="col-md-8">

                                </div>
                                <div class="col-lg-4 col-md-4">
                                    <button type="submit" id="poCreateBtn" class="btn btn-primary btn-block">
                                        <i class='fa fa-plus'></i>
                                        @if (Model.PurchaseOrderId > 0)
                                        {
                                            <span>Add Item In WO</span>
                                        }
                                        else
                                        {
                                            <span>Create WO</span>
                                        }
                                    </button>
                                </div>
                            </div>
                        </div>

