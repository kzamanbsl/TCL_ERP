
@{
    ViewBag.Title = "Index";
}

<head>
    <link href="~/Content/plugins/datatables/dataTables.bootstrap.css" rel="stylesheet" />
    <link href="~/Content/plugins/datatables/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/Content/plugins/datatables/jquery.dataTables.min.js"></script>
</head>
<body>
    <div class="container-fluid">
        <div class="col-sm-12">
            <div class="panel panel-success" style="margin-top: 12px;">
                <div class="panel-heading">Plot Setup</div>
                <div class="panel-body">

                    <div class="col-sm-12">
                        <div class="col-sm-4">

                            <div class="col-sm-12">
                                <label>Project Name</label>
                                <input type="text" class="form-control  input-sm hidden" id="PlotId" value="" />
                                <select style="width: 230px" class="form-control  input-sm" id="ProjectName"></select>

                            </div>
                            <div class="col-sm-12">
                                <label>Plot No</label>
                                <input id="PlotNo" class="form-control  input-sm" type="text" />

                            </div>
                            <div class="col-sm-12">
                                <label>Facing</label>
                                <input id="Face" class="form-control  input-sm" type="text" />

                            </div>

                            <div class="col-sm-12">
                                <label>Plot Size</label>
                                <input type="text" class="form-control  input-sm" id="Size" value="" />
                            </div>
                            <div class="col-sm-12">
                                <label>Block No</label>
                                <input id="Block" class="form-control  input-sm" type="text" />
                            </div>
                             
                            <div class="col-sm-12">
                                <label>Plot Status</label>
                                <input type="text" class="form-control  input-sm hidden" id="DropDownItemId" value="" />
                                <select style="width: 230px" class="form-control  input-sm" id="PlotStatus"></select>
                            </div>

                            <div class="clearfix"></div>
                            <div class="col-sm-4 col-md-offset-5" style="padding-top: 25px;">
                                <button type="button" class="btn btn-success" id="addButton" onclick="SavePlotInfo()">Saved</button>
                            </div>
                        </div>


                        <div class="col-sm-8" style="padding-top: 10px">
                            <table class="plottbl table-bordered table-hover table-responsive" id="plottblTableMain">
                                <thead>
                                    <tr>
                                        <td style="text-align: center">SL</td>
                                        <td style="text-align: center" hidden></td>
                                        <td style="text-align: center">Project Name</td>
                                        <td style="text-align: center" hidden></td>
                                        <td style="text-align: center">Plot No</td>
                                        <td style="text-align: center">Facing</td>
                                        <td style="text-align: center">Plot Size</td>
                                        <td style="text-align: center">Block No</td>
                                        <td style="text-align: center">Status</td>
                                        <td style="text-align: center" hidden></td>
                                        <td style="text-align: center">Action</td>
                                    </tr>
                                </thead>
                                <tbody id="plottblBody"></tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Scripts/KGREScript/PlotInformation.js"></script>
</body>


