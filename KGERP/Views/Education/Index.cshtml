@model IEnumerable<KGERP.Service.ServiceModel.EducationModel>

@{
    ViewBag.Title = "Index";
    var message = TempData["message"];
}

<div class="row">
    <div class="col-md-6">
        @Html.Label("Education List", new { @style = "font-size:20px" })
    </div>
    <div class="col-md-6">

        <a href="@Url.Action("CreateOrEdit",new { id=Request.QueryString["id"],educationId=0})" class="btn btn-primary pull-right">
            <span class="glyphicon glyphicon-plus-sign"></span> Add Education
        </a>
    </div>
</div>


<div class="row">
    <hr style="border-color:#ff0000; padding:0px;margin-top: 5px;margin-bottom: 5px; border-width: 2px;" />
    <table class="table table-striped table-responsive">
        <tr style="background-color:#4CAF50;color:#FFFFFF">
            <th>
                @Html.DisplayNameFor(model => model.ExaminationId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SubjectId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InstituteId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PassingYear)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RollNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Result)
            </th>

            <th>Action</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.DropDownItem.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DropDownItem2.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DropDownItem1.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PassingYear)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RollNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.RegNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Result)
                </td>

                <td>

                    <a href="@Url.Action("CreateOrEdit", new { id = item.Id,educationId=item.EducationId})" title="Edit" class="btn btn-info btn-xs">
                        <i class="fa fa-edit" style="font-size:15px;" aria-hidden="true"></i>
                    </a>
                    <a href="@Url.Action("Delete", new { id = item.Id,educationId=item.EducationId})" title="Delete" class="btn btn-danger btn-xs">
                        <i class="fa fa-trash" style="font-size:15px;" aria-hidden="true"></i>
                    </a>
                    <a href="@Url.Action("Download", new {id=item.Id,educationId = item.EducationId})" class="btn btn-warning btn-xs" title="Download Certificate">
                        <i class="fa fa-download" style="font-size:15px;" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        }

    </table>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")

    <script type="text/javascript">
        var message = '@message';
        if(message){
            alert(message);
        }
    </script>

}
