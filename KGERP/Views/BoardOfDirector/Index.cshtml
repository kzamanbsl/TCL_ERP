@model KGERP.Service.ServiceModel.BoardOfDirectorModel

@{
    var message = TempData["successMessage"];
    ViewBag.Title = "Board Of Director List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<section class="content-header">
    <h1> Board Of Director List</h1>
    <ol class="breadcrumb">
        <li><a href="~/Home/Index"><i class="fa fa-dashboard"></i>Dashboard</a></li>
        <li>
            <a href="@Url.Action("CreateOrEdit",new { id=0 })" class="btn btn-primary pull-right">
                <span class="fa fa-plus"></span> Add
            </a>
        </li>
    </ol>
</section>
<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-danger">
                    <div class="box-body">
                        <div class="table-responsive">
                            <table id="KgErpDataTable" style="width:100%; background-color:#ddd;" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th>SL</th>
                                        <th>Member Image</th>
                                        <th>Member Name</th>
                                        <th>Start Date</th>
                                        <th>End Date</th>
                                        <th>Member Priority</th>
                                        <th>Remarks</th>
                                        <th>Active</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                @{int sl = 0;
                                }
                                <tbody>
                                    @foreach (var item in Model.DataList)
                                    {
                                        <tr>
                                            <td style="width:10px;">
                                                @(++sl)
                                            </td>
                                            <td>             
                                                <img src="~/Images/BoardOfDirector/@item.MemberImage)" height="40" width="40" alt="BoardDirector">
                                            </td>
                                            <td>@item.MemberName</td>
                                            <td>@item.StartDate</td>
                                            <td>
                                                @item.EndDate
                                            </td>
                                            <td>
                                                @item.MemberOrder
                                            </td>
                                            <td>
                                                @item.Remarks
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.IsActive)
                                            </td>
                                            <td class="text-center">
                                                <a href="@Url.Action("CreateOrEdit", new {id = item.BoardOfDirectorId})" title="Edit" class="btn btn-info btn-xs">
                                                    <i class="fa fa-edit" style="font-size:15px;" aria-hidden="true"></i>
                                                </a>

                                                <a href="@Url.Action("Delete", new { id = item.BoardOfDirectorId })" onclick="return confirm('Are you sure to delete Member ?');" class="btn btn-danger btn-xs">
                                                    <i class="fa fa-trash" style="font-size:15px;" aria-hidden="true"></i>
                                                </a>

                                            </td>
                                        </tr>
                                    }
                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")

    <script type="text/javascript">
        $('.datepicker').datepicker({
            dateFormat: "dd/mm/yy",
            showOn: 'both',
            buttonText: "<i class='fa fa-calendar'></i>",
            changeMonth: true,
            changeYear: true,
            yearRange: "2001:+50"
        });
        var message = '@message';
    if(message){
        alert(message);
    }

    </script>
}
