@using KG.Core.Services;

@model KGERP.Service.Implementation.Procurement.VmInventoryDetails
@{
    Layout = null;
    decimal closingBalance = 0m;
    decimal TotalCr = 0m;
    decimal TotalDr = 0m;

}
<!DOCTYPE html>
<html>
<head>
