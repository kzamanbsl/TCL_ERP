@model KGERP.Service.ServiceModel.VendorDeedListVm

@{
    ViewBag.Title = "Vendor Deed List";
    var message = TempData["message"];
    int sl = 0;
}

<style type="text/css">

    input, select, textarea {
        max-width: 100%;
    }
</style>

<section class="content-header">
    <h1>Vendor Deed List</h1>
    <ol class="breadcrumb">
        <li><a href="~/Home/Index"><i class="fa fa-dashboard"></i>Dashboard</a></li>
        <li class="active">
                <a href="@Url.Action("CreateVendorDeed", "Vendor", new { companyId= Model.CompanyId, vendorDeedId= 0})" class="btn btn-primary btn-xs">
                    <span class="glyphicon glyphicon-plus-sign"></span> Add Vendor Deed
                </a>
        </li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-danger">
                    <div class="box-header">
                    </div>
                    <div class="box-body">
                        <div class="table-responsive">
                            <table id="KgErpDataTable" class="table table-striped table-responsive">
                                <thead style="background-color: #ddd;">
                                    <tr>
                                        <th>SL</th>
                                        <th>Vendor Name</th>
                                        <th>Monthly Target</th>
                                        <th>Yearly Target</th>
                                        <th>Credit Ratio  From </th>
                                        <th>Credit Ratio To</th>
                                        <th>Credit Limit</th>
                                        <th>Days</th>
                                        <th>Transport</th>
                                        <th>Closing Date </th>
                                        <th>Deposit Rate</th>
                                        <th style="text-align:center">
                                            Action
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.DataList)
                                    {
                                        <tr>
                                            <td width="5%">
                                                @(++sl)
                                            </td>
                                            <td width="20%">
                                                @item.VendorName
                                            </td>
                                            <td>@item.MonthlyTarget</td>
                                            <td>@item.YearlyTarget</td>
                                            <td>@item.CreditRatioFrom</td>
                                            <td>@item.CreditRatioTo</td>
                                            <td>@item.CreditLimit</td>
                                            <td>@item.Days</td>
                                            <td>@item.Transport</td>
                                            <td>@item.ClosingDate</td>
                                            <td>@item.DepositRate</td>
                                            <td width="10%" style="text-align:center">
                                                <a href="@Url.Action("CreateVendorDeed","Vendor", new { companyId= Model.CompanyId, vendorDeedId= item.VendorDeedId })" title="Edit" class="btn btn-info btn-xs">
                                                    <i class="fa fa-edit" aria-hidden="true"></i>
                                                </a>
                                                <a href="@Url.Action("RemoveVendorDeed","Vendor", new { companyId= Model.CompanyId, vendorDeedId= item.VendorDeedId })" onclick="return confirm('Are you sure to delete this record?');" title="Delete" class="btn btn-danger btn-xs">
                                                    <i class="fa fa-trash" aria-hidden="true"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="box-footer">
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>







@section Scripts {
    <script type="text/javascript">
        var message = '@message';
        if(message){
            alert(message);
        }
    </script>
}
