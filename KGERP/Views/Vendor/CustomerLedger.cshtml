@model List<KGERP.Data.CustomModel.CustomerLedgerCustomModel>
@{
    ViewBag.Title = "Customer Ledger";
}

<div class="row">
    @using (Html.BeginForm("Index", "Vendor", FormMethod.Get))
    {
        <div class="col-md-6">
            @Html.Label("Customer Ledger", new { @style = "font-size:25px" })
        </div>
        <div class="col-md-6">
            @*<div class="col-md-8">@Html.TextBox("searchText", null, new { @autocomplete = "off", @class = "form-control pull-left", @placeholder = "Search..." })</div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-success pull-left">Search&nbsp;<i class="fa fa-search"></i></button>
                </div>*@

            <a href="@Url.Action("Index")" class="btn btn-primary pull-right">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>

        </div>
    }
</div>
<div class="row">
    <table class="table">
        <tr>
            <td><b>@Html.DisplayNameFor(model => model.First().Customer)</b></td>
            <td>@Html.DisplayFor(model => model.First().Customer)</td>
            <td><b>@Html.DisplayNameFor(model => model.First().Address)</b></td>
            <td>@Html.DisplayFor(model => model.First().Address)</td>
        </tr>
        <tr>
            <td><b>@Html.DisplayNameFor(model => model.First().Phone)</b></td>
            <td>@Html.DisplayFor(model => model.First().Phone)</td>
            <td><b>@Html.DisplayNameFor(model => model.First().OpeningBalance)</b></td>
            <td>@Html.DisplayFor(model => model.First().OpeningBalance)</td>
        </tr>
    </table>
</div>

<div class="row">

    <table class="table table-striped table-responsive">
        <tr style="background-color:#009270;color:#FFFFFF">
            <th>SL</th>
            <th>
                @Html.DisplayNameFor(model => model.First().Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().TransactionType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().ChallanNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().BillNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().PaymentRefNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().Qty)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().DRAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().CRAmount)
            </th>

        </tr>

        @foreach (var item in Model.Select((x, i) => new { Data = x, Index = i }))
        {
            <tr>
                <td>
                    @(item.Index + 1)
                </td>
                <td>
                    @item.Data.Date.ToString("dd MMM yyyy")
                </td>
                <td>
                    @item.Data.TransactionType
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data.ChallanNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data.BillNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data.PaymentRefNo)
                </td>
                <td>
                    @if (item.Data.Qty > 0)
                    {
                        @Html.DisplayFor(modelItem => item.Data.Qty)
                    }
                </td>
                <td>
                    @if (item.Data.DRAmount > 0)
                    {
                        @Html.DisplayFor(modelItem => item.Data.DRAmount)
                    }

                </td>
                <td>
                    @if (item.Data.CRAmount > 0)
                    {
                        @Html.DisplayFor(modelItem => item.Data.CRAmount)
                    }
                </td>

            </tr>
        }
    </table>

</div>


