@model KGERP.ViewModel.VendorViewModel
@{
    ViewBag.Title = "Customer Receivables";
}


<div class="row">
    @using (Html.BeginForm("Index", "Vendor", FormMethod.Get))
    {
        <div class="col-md-6">
            @Html.Label("Customer Receivable List", new { @style = "font-size:25px" })
        </div>
        <div class="col-md-6">
            @*<div class="col-md-8">@Html.TextBox("searchText", null, new { @autocomplete = "off", @class = "form-control pull-left", @placeholder = "Search..." })</div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-success pull-left">Search&nbsp;<i class="fa fa-search"></i></button>
                </div>*@

            <a href="@Url.Action("Index")" class="btn btn-primary pull-right">
                <span class="glyphicon glyphicon-arrow-left"></span> Back
            </a>

        </div>
    }
</div>
<div class="row">
    <table class="table">
        <tr>
            <td><b>Customer Name</b></td>
            <td>@Html.DisplayFor(model => model.Vendor.Name)</td>
            <td><b>@Html.DisplayNameFor(model => model.Vendor.Address)</b></td>
            <td>@Html.DisplayFor(model => model.Vendor.Address)</td>
        </tr>
        <tr>
            <td><b>@Html.DisplayNameFor(model => model.Vendor.Phone)</b></td>
            <td>@Html.DisplayFor(model => model.Vendor.Phone)</td>
            <td><b>@Html.DisplayNameFor(model => model.Vendor.PaymentDue)</b></td>
            <td>@Html.DisplayFor(model => model.Vendor.PaymentDue)</td>
        </tr>
    </table>
</div>

<div class="row">

    <table class="table table-striped table-responsive">
        <tr style="background-color:#009270;color:#FFFFFF">
            <th>SL</th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerReceivables.First().OrderNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerReceivables.First().DeliveryDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerReceivables.First().ChallanNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerReceivables.First().VehicleInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CustomerReceivables.First().DeliverAmount)
            </th>
            <th>
                Action
            </th>
        </tr>

        @foreach (var item in Model.CustomerReceivables.Select((x, i) => new { Data = x, Index = i }))
        {
            <tr>
                <td>
                    @(item.Index + 1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data.OrderNo)
                </td>
                <td>
                    @item.Data.DeliveryDate.ToString("dd MMM yyyy")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data.ChallanNo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data.VehicleInfo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data.DeliverAmount)
                </td>
                <td></td>
            </tr>
        }
    </table>

</div>

