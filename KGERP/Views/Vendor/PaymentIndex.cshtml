@model KGERP.Service.ServiceModel.VendorModel

@{
    var message = TempData["successMessage"];
    ViewBag.Title = "Customer List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="content-header">
    <h1>Customer Payment List</h1>
    <ol class="breadcrumb">
        <li><a href="~/Home/Index"><i class="fa fa-dashboard"></i>Dashboard</a></li>
        <li>
            <a href="#">Customer List</a>
        </li>
    </ol>
</section>

<div class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                <div class="box-danger">
                    <div class="box-body">
                        <div class="table-responsive">
                            <table id="KgErpDataTable" style="width:100%; background-color:#ddd" class="table table-striped">
                                <thead>
                                    <tr>
                                        <th style="width:5%;">SL</th>
                                        <th style="width:10%;">Account Code</th>
                                        <th style="width:15%;">Company Name</th>
                                        <th style="width:15%;">Address</th>
                                        <th style="width:10%;">Phone</th>
                                        <th style="width:5%;">L.P.Date</th>
                                        <th style="width:10%;">Balance</th>     
                                    </tr>
                                </thead>
                                @{int sl = 0;
                                }
                                <tbody>
                                    @foreach (var item in Model.DataList)
                                    {
                                        <tr>
                                            <td style="width:10px;">
                                                @(++sl)
                                            </td>
                                            <td>
                                                @item.Code
                                            </td>
                                            <td>@item.Name</td>
                                            <td>
                                                @item.Address
                                            <td>
                                                @item.Phone
                                            </td>
                                            <td>
                                                @item.LastPaymentDate
                                            </td>
                                            <td>@item.Balance</td>
                                        </tr>
                                    }
                                </tbody>

                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqueryui")
    @Styles.Render("~/Content/cssjqryUi")

    <script type="text/javascript">
    if(message){
        alert(message);
    }

    </script>

}
