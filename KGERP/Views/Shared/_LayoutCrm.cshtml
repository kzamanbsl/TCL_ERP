@using KGERP.Utility
@{
    Layout = null;
    var app = HttpContext.Current.ApplicationInstance as MvcApplication;
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <link href="/Images/Logo/kg_logo-150x150.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="~/Content/Crm/css/bootstrap.min.css">
    <link href="~/Content/Crm/fonts/css/fontawesome.css" rel="stylesheet" />
    <link href="~/Content/Crm/fonts/css/brands.css" rel="stylesheet" />
    <link href="~/Content/Crm/fonts/css/solid.css" rel="stylesheet" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.12.1/css/jquery.dataTables.css">
    <link rel="stylesheet" href="~/Content/Crm/css/bootstrap-timepicker.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/hover.css/2.1.1/css/hover-min.css" />
    <link href="~/Content/bootstrap-datepicker/dist/css/bootstrap-datepicker.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.2/jquery-confirm.min.css">
    <link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
    <link href="~/Content/themes/base/datepicker.css" rel="stylesheet" />

    <link href='http://fonts.googleapis.com/css?family=Roboto:400,100,100italic,300,300italic,400italic,500,500italic,700,700italic,900italic,900' rel='stylesheet' type='text/css'>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.25/css/jquery.dataTables.css">
    <title>@ViewData["Title"]</title>
    <style>
        .allButFooter {
            position: absolute;
            bottom: 0;
            width: 100%;
            height: 50px; /* Height of the footer */
            background: #4caf50;
        }

        .ui-autocomplete {
            z-index: 2147483647;
        }

        td > a {
            color: black;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <div class="container-fluid">
        @if (Session["UserName"] != null)
        {
            if (app.IsReleased == true)
            {
                Html.RenderAction("NavCrmPartial", "Crms");
            }
            else
            {
            }
        }
        <div class="content-wrapper;overflow-x:scroll;" style="height:1000px;">
            <div style="padding:20px;">
                @RenderBody()
            </div>
            <footer class="page-footer text-center" style="background-color: #4caf50; padding: 10px;">
                <strong>Copyright &copy; IT Department, Krishibid Group</strong> All rights reserved.
            </footer>
        </div>

        @*<div class="fixed-bottom">
            
        </div>*@
       
    </div>
    <script src="~/Content/Crm/js/jquery-3.6.1.min.js"></script>
    <script src="~/Content/Crm/js/popper.min.js"></script>
    <script src="~/Content/Crm/js/bootstrap.min.js"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.12.1/js/jquery.dataTables.js"></script>

    <script src="~/Content/Crm/js/bootstrap-timepicker.min.js"></script>
    <script src="~/Content/bootstrap-datepicker/dist/js/bootstrap-datepicker.min.js"></script>
    <script type="text/javascript">
       

        function refreshWindow() {
            window.location.reload();
        }
    </script>
    @RenderSection("Scripts", false)
</body>
</html>