<div class="row">
    <hr style="border-color:#32527B; padding:0px;margin-top: 5px;margin-bottom: 5px; border-width: 2px;" />
    <table class="table table-striped table-condensed">
        <tr style="background-color:#000080;color:#FFFFFF">
            <th>
                SL.
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().State)
            </th>


            <th>
                @Html.DisplayNameFor(model => model.First().Remarks)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().OrderNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.First().IsActive)
            </th>
            <th class="text-right">Action</th>
        </tr>

        @foreach (var item in Model.Select((x, i) => new { Data = x, Index = i }))
        {
            <tr>
                <td>
                    @(item.Index + 1)
                </td>
                <td>
                    <b>@Html.DisplayFor(modelItem => item.Data.State)</b>
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.Data.Remarks)
                </td>
                <th>
                    @Html.DisplayFor(modelItem => item.Data.OrderNo)
                </th>
                <td>
                    @Html.DisplayFor(modelItem => item.Data.IsActive)
                </td>
                <td class="text-right">
                    <a href="@Url.Action("CreateOrEdit", new { id = item.Data.WorkStateId})" title="Edit" class="btn btn-info btn-xs">
                        <i class="fa fa-edit" style="font-size:15px;" aria-hidden="true"></i>
                    </a>
                    <a href="@Url.Action("Delete", new { id = item.Data.WorkStateId})" title="Delete" class="btn btn-danger btn-xs">
                        <i class="fa fa-trash" style="font-size:15px;" aria-hidden="true"></i>
                    </a>


                </td>
            </tr>
        }

    </table>
</div>


@section Scripts{
    <script type="text/javascript">


    </script>
}